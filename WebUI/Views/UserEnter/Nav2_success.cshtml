@model ATM.Domain.Entities.Card
@{
    ViewBag.Title = "Nav2_success";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    ol {
        list-style-type: none; /* Убираем исходные маркеры */
        counter-reset: item; /* Обнуляем счетчик списка */
    }

    li:before {
        content: counter(item) ') '; /* Добавляем к числам скобку */
        counter-increment: item; /* Задаём имя счетчика */
    }
</style>

<h2>Information:</h2>
@Html.Label("Card number: ")
@Html.DisplayFor(model => model.Cardname)
<p></p>
@Html.Label("Card activation date: ")
@Html.DisplayFor(model => model.Start)
<p></p>
@Html.Label("Card end date: ")
@Html.DisplayFor(model => model.Finish)
<p></p>
@Html.Label("Card cash: ")
@Html.DisplayFor(model => model.Cash) rubles

<h2>Card story(Last 10 operations)</h2>
@{
    string[] words = Model.Queue.Split(new char[] {';'}, StringSplitOptions.RemoveEmptyEntries);
    <ol>
    @for (int i = 0; i < words.Length - 1; i++)
    {
        <li> @words[i]</li>
    }
     </ol>
}
<p></p>
@Html.ActionLink("www.ATM.com","List","Card")
